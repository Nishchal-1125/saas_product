{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "auth-svc": {
      "type": "application",
      "root": "services/auth-svc",
      "entryFile": "main",
      "sourceRoot": "services/auth-svc/src",
      "compilerOptions": {
        "tsConfigPath": "services/auth-svc/tsconfig.json"
      }
    },
    "api-gateway": {
      "type": "application", 
      "root": "services/api-gateway",
      "entryFile": "main",
      "sourceRoot": "services/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "services/api-gateway/tsconfig.json"
      }
    },
    "user-svc": {
      "type": "application",
      "root": "services/user-svc", 
      "entryFile": "main",
      "sourceRoot": "services/user-svc/src",
      "compilerOptions": {
        "tsConfigPath": "services/user-svc/tsconfig.json"
      }
    }
  }
}
