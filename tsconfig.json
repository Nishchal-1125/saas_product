{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["libs/shared-dtos/src/*"],
      "@auth/*": ["libs/auth-utils/src/*"],
      "@db/*": ["libs/db-utils/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "services/**/*",
    "libs/**/*",
    "configs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "ecommerce-frontend"
  ]
}
